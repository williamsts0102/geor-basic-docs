    <h6>Registro de Item</h6>
    <p>
        <strong>Descripción:</strong>Endpoint para registrar los items
    </p>
    <p>
        <strong>URL:</strong>
        <span
            >http://pasion.georfacturacion.test/api/v1/items/store</span
        >
    </p>
    <p><strong>Método:</strong>POST</p>

    <p>
        <strong>Request:</strong>
    </p>
    <pre>
    {
    JSON.stringify({
        "name": "prueba",
        "description": "asdasda",
        "category_id": 1,
        "image": "nueva_imagen.jpg",
        "temp_path": "imagen en base64",
        "currency_type_id": "USD",
        "sale_unit_price": 20,
        "offer_price": 18,
        "unit_type_id": "NIU",
        "has_igv": 1,
        "barcode": "5/901234/123457",
        "internal_id": "ZG011AQA",
        "items_warehouse": [
            {
                "stock": 100,
                "warehouse_id": 1
            }
        ]
    }, null, 2)
    }
    </pre>
    <p>
        <strong>Respuesta</strong>
    </p>
    <pre>
        { JSON.stringify({
            "success": true,
            "id": 1,
            "message": "Producto registrado con éxito"}, null, 2)}
    </pre>

